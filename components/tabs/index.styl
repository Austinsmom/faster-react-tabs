.tabs {
  padding-bottom: 1em;

  &__menu {
    margin: 0 0 2em 0;
    padding: 0;
  }

  &__button {
    background: none;
    border: none;
    cursor: pointer;
    line-height: 1.3;
    outline: 0;
    color: #fff;
    padding: 0.3em 0.5em;
    font-size: 18px;
  }

  &__item {
    list-style-type: none;
    display: inline-block;
    background-color: lighten(#000, 50%);
    margin-right: 1em;

    &:hover,
    &:focus {
      background-color: lighten(#000, 30%);
    }

    &--active {
      background-color: #000;
    }
  }
}
